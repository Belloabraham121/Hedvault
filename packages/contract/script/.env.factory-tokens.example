# Factory Tokens Creation Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED ADDRESSES
# =============================================================================

# Address of the deployed RWATokenFactory contract
RWA_TOKEN_FACTORY_ADDRESS=0x...

# Address that will create and own the tokens (must be approved by factory admin)
CREATOR_ADDRESS=0x...

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# RPC URL for the target network
# Hedera Testnet
RPC_URL=https://testnet.hashio.io/api

# Hedera Mainnet
# RPC_URL=https://mainnet.hashio.io/api

# Ethereum Sepolia Testnet
# RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Private key of the creator account (without 0x prefix)
# WARNING: Never commit this to version control!
PRIVATE_KEY=your_private_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Gas configuration (optional)
GAS_LIMIT=3000000
GAS_PRICE=20000000000

# Etherscan API key for contract verification (optional)
ETHERSCAN_API_KEY=your_etherscan_api_key

