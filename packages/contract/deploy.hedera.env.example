# Hedera Network Deployment Configuration
# Copy this file to .env and fill in your values

# Network Configuration
HEDERA_NETWORK=testnet
HEDERA_RPC_URL=https://testnet.hashio.io/api
HEDERA_CHAIN_ID=296

# Account Configuration
PRIVATE_KEY=your_private_key_here
FEE_RECIPIENT=your_fee_recipient_address

# Hedera Specific
HEDERA_ACCOUNT_ID=0.0.your_account_id
HEDERA_OPERATOR_KEY=your_hedera_operator_key
WHBAR_ADDRESS=0x0000000000000000000000000000000000000163
HTS_PRECOMPILE=0x0000000000000000000000000000000000000167

# Chainlink Oracle Configuration (Hedera Testnet)
HBAR_USD_FEED=0x6f7C932e7684666C9fd1d44527765433e01fF61d
ETH_USD_FEED=0x9326BFA02ADD2366b30bacB125260Af641031331
BTC_USD_FEED=0x56a43EB56Da12C0dc1D972ACb089c06a5dEF8e69
LINK_USD_FEED=0xb113F5A928BCfF189C998ab20d753a47F9dE5A61
USDC_USD_FEED=0xa24de01df22b63d23Ebc1882a5E3d4ec0d907bFB

# Oracle Configuration
ORACLE_HEARTBEAT=3600
ORACLE_DECIMALS=8
CONFIGURE_CHAINLINK=true

# Deployment Configuration
REWARD_TOKEN_SUPPLY=1000000000000000000000000000
DEPLOY_MOCK_TOKENS=true
INITIALIZE_REWARD_POOLS=true
SETUP_TEST_DATA=true

# Gas Configuration
GAS_PRICE=100000000000
GAS_LIMIT=15000000

# Verification (Optional)
ETHERSCAN_API_KEY=your_hashscan_api_key
VERIFY_CONTRACTS=false

# Token Creation Fees (in wei, equivalent to HBAR)
TOKEN_CREATION_FEE=100000000000000000000
LISTING_FEE=50000000000000000000

# Security Settings
MIN_CONFIDENCE=8000
MAX_PRICE_AGE=3600
MAX_DEVIATION=1000

# Hedera Mainnet Configuration (for production)
# HEDERA_NETWORK=mainnet
# HEDERA_RPC_URL=https://mainnet.hashio.io/api
# HEDERA_CHAIN_ID=295
# HBAR_USD_FEED_MAINNET=0x...
# ETH_USD_FEED_MAINNET=0x...
# BTC_USD_FEED_MAINNET=0x...

# Additional Hedera Features
ENABLE_HTS_INTEGRATION=true
ENABLE_HEDERA_CONSENSUS=true
HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# Cross-chain Configuration
ENABLE_CROSS_CHAIN=true
SUPPORTED_CHAINS=ethereum,polygon,bsc

# Compliance Settings
KYC_REQUIRED=true
AML_COMPLIANCE=true
REGULATORY_COMPLIANCE=true

# Performance Settings
BATCH_SIZE=50
MAX_RETRIES=3
TIMEOUT=30000

# Monitoring
ENABLE_MONITORING=true
MONITORING_ENDPOINT=https://your-monitoring-service.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION=7